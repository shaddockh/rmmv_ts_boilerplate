{
    "name": "rmmv-ts-template",
    "main": "index.html",
    "js-flag": "--expose-gc",
    "window": {
        "title": "",
        "toolbar": false,
        "width": 816,
        "height": 624,
        "icon": "icon/icon.png"
    },
    "version": "1.0.0",
    "description": "",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^21.1.5",
        "@types/node": "^8.9.5",
        "copy-webpack-plugin": "^4.5.1",
        "copyfiles": "^2.0.0",
        "decorator-debug": "^1.0.3",
        "jest": "^21.2.1",
        "ts-jest": "^21.1.3",
        "ts-loader": "^3.0.5",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.7.2",
        "webpack": "^3.8.1"
    },
    "scripts": {
        "test": "jest --collectCoverage false",
        "coverage": "jest --collectCoverage true",
        "build": "webpack",
        "predist": "npm run build",
        "dist": "copyfiles js/**/*.* audio/**/*.* data/**/*.* fonts/**/*.* icon/**/*.* img/**/*.* movies/**/*.* Game.rpgproject package.json index.html dist"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "mapCoverage": true,
        "collectCoverageFrom": [
            "ts/**/*.ts",
            "!ts/**/*.d.ts"
        ],
        "coverageDirectory": "<rootDir>/test/_coverageReport",
        "coverageReporters": [
            "lcov",
            "text"
        ]
    },
    "license": "MIT"
}
